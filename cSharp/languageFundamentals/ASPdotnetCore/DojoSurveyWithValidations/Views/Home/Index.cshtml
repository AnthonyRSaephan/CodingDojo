@{
    ViewData["Title"] = "Home Page";
}

@model User

<div>
    <form asp-action="Process" asp-controller="Home" class="justify-content-center">
        <div>
            <span asp-validation-for="Name"></span>
            <br>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control">
            <br>
        </div>

        <div>
            <span asp-validation-for="Location"></span>
            <br>
            <label asp-for="Location">Location:</label>
            <select asp-for="Location" class="form-control">
                <option hidden value=""> - Select a Location -</option>
                <option value="San Jose">San Jose</option>
                <option value="Seattle">Seattle</option>
                <option value="Ohio">Ohio</option>
            </select>
            <br>
        </div>

        <div>
            <span asp-validation-for="FavoriteLanguage"></span>
            <br>
            <label asp-for="FavoriteLanguage">Favorite Language:</label>
            <select asp-for="FavoriteLanguage" class="form-control">
                <option hidden value=""> - Select a Favorite Language -</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
            </select>
            <br>
        </div>

        <div>
            <span asp-validation-for="Comment"></span>
            <br>
            <label asp-for="Comment">Comment (optional):</label>
            <textarea asp-for="Comment" class="d-block form-control"></textarea>
            <br>
        </div>

        <div>
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
