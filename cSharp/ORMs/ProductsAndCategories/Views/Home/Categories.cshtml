@{
    ViewData["Title"] = "Categories";
}
@model Category

<h4>
    <a href="/">Products</a>
    |
    Categories
</h4>

<h1>New Category</h1>
<hr>
<form asp-action="CreateACategory" asp-controller="Home">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Create</button>
</form>
<hr>
<h1>All Categories</h1>

<div>
    @foreach (Category category in ViewBag.categories)
    {
        <div>
            <a href="/categories/@category.CategoryId">@category.Name</a>
        </div>
    }
</div>