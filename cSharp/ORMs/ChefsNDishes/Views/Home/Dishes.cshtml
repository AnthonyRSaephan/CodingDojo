@{
    ViewData["Title"] = "Dishes";
}
@model List<Dish>


<div class="text-center">
    <a asp-action="Chefs" asp-controller="Home">Chefs</a> |
    Dishes |
    <a asp-action="AddAChef" asp-controller="Home">Add a Chef</a> |
    <a asp-action="AddADish" asp-controller="Home">Add a Dish</a>
</div>

<div class="text-center">
    <h1>Yum! Check out our tasty dishes!</h1>
</div>

<hr>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Dish dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </tbody>
</table>