@{
    ViewData["Title"] = "Dish";
}
@model Dish

<div class="text-center">
    <h1>@Model.Name</h1>
    <h6><a asp-action="Dishes" asp-controller="Home">Home</a> | <a asp-action="CreateANewDish">Add a Dish</a></h6>
</div>

<h6>@Model.Name by @Model.Chef</h6>
<hr>
<h6>@Model.Description</h6>
<h6>Calories: @Model.Calories</h6>
<h6>Tastiness: @Model.Tastiness</h6>

<div class="d-flex justify-content-around">
    <form asp-action="DestroyADish" asp-controller="Home" asp-route-id="@Model.DishId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>
    <a asp-action="EditADish" asp-controller="Home" asp-route-id="@Model.DishId" class="btn btn-success">Edit</a>
</div>